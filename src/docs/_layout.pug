doctype html
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    link(rel='stylesheet' href='/css/xeltica-ui.min.css')
    style.
      .xd-container {
        display: grid;
        grid-auto-flow: column;
        grid-auto-columns: 18rem 1fr;
      }
      .xd-footer {
        border-top: 1px solid var(--tone-3);
        padding: 1rem;
        margin-top: 2rem;
      }
      #daylight {
        background: transparent;
        font-size: 1rem;
        color: inherit;
        border: none;
        width: 100%;
        text-align: left;
      }
    block head
    block title
      title Xeltica UI

  body._container
    header.xd-header
      h1: a(href="/") Xeltica UI
      block header
    .xd-container
      +sidebar
      .xd-main
        block main
        +footer
    script.
      const btn = document.getElementById('daylight');
      btn.addEventListener('click', () => {
        document.body.classList.toggle('_dark');
      });
    block script
